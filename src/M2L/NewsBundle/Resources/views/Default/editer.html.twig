{% extends "M2LSiteBundle:Default:layout.html.twig" %}
{% block title %} {{ parent() }} - Editer une annonce {% endblock %}
{% block body %}
	<h1 style="text-align:center"> Editer une annonce </h1>
	<div class="container">
		<form action="{{ path('m2_l_news_editer', { 'id' : entity.id }) }}" method="POST" {{ form_enctype(edit_form) }} class="form-actions">
			<div class="form-group">
				{{ form_errors(edit_form.titre) }}
				{{ form_label(edit_form.titre, "Titre de l'article", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(edit_form.titre, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_errors(edit_form.texte) }}
				{{ form_label(edit_form.texte, "Texte de l'annonce", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(edit_form.texte, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_errors(edit_form.prix) }}
				{{ form_label(edit_form.prix, "Prix", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(edit_form.prix, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_errors(edit_form.date) }}
				{{ form_label(edit_form.date, "Date de l'annonce", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(edit_form.date, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_errors(edit_form.photo.file) }}
				{{ form_label(edit_form.photo.file, "Ajouter une photo", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(edit_form.photo.file, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_errors(edit_form.photo.name) }}
				{{ form_label(edit_form.photo.name, "Nom de la photo", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(edit_form.photo.name, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				<div class="span9" style="text-align:center">
					{{ form_rest(edit_form) }}
				</div>
			</div>
		</form>
	</div>

{% endblock %}