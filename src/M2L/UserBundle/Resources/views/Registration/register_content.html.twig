{% block body %}
	<h1 style="text-align:center"> S'inscrire </h1>
	<div class="container">
		<form action="{{ path('fos_user_registration_register') }}" method="POST" {{ form_enctype(form) }} class="form-actions">
			<div class="form-group">
				{{ form_errors(form.username) }}
				{{ form_label(form.username, "Nom d'utilisateur", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(form.username, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_errors(form.email) }}
				{{ form_label(form.email, "Adresse e-mail", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(form.email, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_errors(form.plainPassword.first) }}
				{{ form_label(form.plainPassword.first, "Mot de passe", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(form.plainPassword.first, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_errors(form.plainPassword.second) }}
				{{ form_label(form.plainPassword.second, "VÃ©rification", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(form.plainPassword.second, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_errors(form.ligue) }}
				{{ form_label(form.ligue, "Ligue", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center;'} }) }}
				<div>
					{{ form_widget(form.ligue, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>
			<div class="form-group">
				<div class="span9" style="text-align:center">
					{{ form_rest(form) }}
				</div>
			</div>
			{{ form_widget(form._token) }}
			<div class="form-group" style="text-align:center">
       			 <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary"/>
    		</div>
		</form>
	</div>

{% endblock %}