<form action="{{ path('m2_l_news_editer', {'id':entity.id}) }}" method="POST" {{ form_enctype(edit_form) }} class="form-actions">
   <div class="form-group">
    {{ form_errors(edit_form.file) }}
    {{ form_label(edit_form.file, "Ajouter une photo", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
    <div>
     {{ form_widget(edit_form.file, { 'attr': { 'class': 'span4' } }) }}
    </div>
   </div>
   <div class="form-group">
    {{ form_errors(edit_form.name) }}
    {{ form_label(edit_form.name, "Nom de la photo", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
    <div>
     {{ form_widget(edit_form.name, { 'attr': { 'class': 'span4' } }) }}
    </div>
   </div>
   <div class="form-group">
    <div class="span9" style="text-align:center">
     {{ form_rest(edit_form) }}
    </div>
   </div>
  </form>