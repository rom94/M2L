<form action="{{ path('m2_ajouter_galerie') }}" method="POST" {{ form_enctype(form) }} class="form-actions">
   <div class="form-group">
    {{ form_errors(form.file) }}
    {{ form_label(form.file, "Ajouter une photo", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
    <div>
     {{ form_widget(form.file, { 'attr': { 'class': 'span4' } }) }}
    </div>
   </div>
   <div class="form-group">
    {{ form_errors(form.name) }}
    {{ form_label(form.name, "Nom de la photo", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
    <div>
     {{ form_widget(form.name, { 'attr': { 'class': 'span4' } }) }}
    </div>
   </div>
   <div class="form-group">
    <div class="span9" style="text-align:center">
     {{ form_rest(form) }}
    </div>
   </div>
  </form>