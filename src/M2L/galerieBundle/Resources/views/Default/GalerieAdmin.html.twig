{% block title %}  Ajouter une annonce {% endblock %}
{% block body %}
	<h1 style="text-align:center"> Ajouter une annonce </h1>
	<div class="container">
		<form action="{{ path('m2_ladmin_galerie') }}" method="POST" {{ form_enctype(form) }} class="form-actions">
			<div class="form-group">
				{{ form_errors(form.file) }}
				{{ form_label(form.file, "photo 1 diapo", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(form.file, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_errors(form.file2) }}
				{{ form_label(form.file2, "photo 1 diapo", { 'label_attr': {'class':'span4 control-label', 'style':'text-align:center'} }) }}
				<div>
					{{ form_widget(form.file2, { 'attr': { 'class': 'span4' } }) }}
				</div>
			</div>





			<div class="form-group">
				<div class="span9" style="text-align:center">
					{{ form_rest(form) }}
				</div>
			</div>
		</div>
		</form>
	</div>

{% endblock %}